{
  "compilerOptions": {
    "outDir": "./dist",

    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowJs": true,
    "resolveJsonModule": true,
    "types": [
      "node", // Added to allow the use of nodes fs
    ]
  },
  "include": [
    "./src/**/*"
  ],
}
